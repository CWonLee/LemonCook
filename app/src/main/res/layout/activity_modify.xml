<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical"
    tools:context=".src.modifyRecipe.ModifyActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <ImageView
            android:id="@+id/modify_ic_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_back"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="30dp"/>

        <TextView
            android:id="@+id/modify_tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/modify_ic_back"
            android:layout_marginLeft="10dp"
            android:text="레시피 수정하기"
            android:textColor="@color/colorLoginBlack"
            android:textSize="16sp"
            android:textStyle="bold"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/modify_cl_category"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent">

                <com.makers.lemoncook.src.VerticalTextView
                    android:id="@+id/modify_vt_category"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="24dp"
                    android:text="Category"
                    android:textColor="@color/colorMainGray"
                    android:textSize="12sp" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="61dp"
                    android:layout_marginRight="24dp"
                    app:layout_constraintDimensionRatio="6.5:1">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1">

                            <Button
                                android:id="@+id/modify_btn_category1"
                                android:layout_width="0dp"
                                android:layout_height="0dp"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintLeft_toLeftOf="parent"
                                app:layout_constraintRight_toRightOf="parent"
                                android:background="@drawable/round_category_fill"
                                app:layout_constraintDimensionRatio="1:1"
                                android:textColor="@color/colorLemon"
                                android:textSize="10sp"
                                android:text="한식"
                                android:textStyle="bold" />

                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1">

                            <Button
                                android:id="@+id/modify_btn_category2"
                                android:layout_width="0dp"
                                android:layout_height="0dp"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintLeft_toLeftOf="parent"
                                app:layout_constraintRight_toRightOf="parent"
                                android:background="@drawable/round_category_fill"
                                app:layout_constraintDimensionRatio="1:1"
                                android:textColor="@color/colorLemon"
                                android:textSize="10sp"
                                android:text="중식"
                                android:textStyle="bold" />

                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1">

                            <Button
                                android:id="@+id/modify_btn_category3"
                                android:layout_width="0dp"
                                android:layout_height="0dp"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintLeft_toLeftOf="parent"
                                app:layout_constraintRight_toRightOf="parent"
                                android:background="@drawable/round_category_fill"
                                app:layout_constraintDimensionRatio="1:1"
                                android:textColor="@color/colorLemon"
                                android:textSize="10sp"
                                android:text="일식"
                                android:textStyle="bold" />

                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1">

                            <Button
                                android:id="@+id/modify_btn_category4"
                                android:layout_width="0dp"
                                android:layout_height="0dp"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintLeft_toLeftOf="parent"
                                app:layout_constraintRight_toRightOf="parent"
                                android:background="@drawable/round_category_fill"
                                app:layout_constraintDimensionRatio="1:1"
                                android:textColor="@color/colorLemon"
                                android:textSize="10sp"
                                android:text="양식"
                                android:textStyle="bold" />

                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1">

                            <Button
                                android:id="@+id/modify_btn_category5"
                                android:layout_width="0dp"
                                android:layout_height="0dp"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintLeft_toLeftOf="parent"
                                app:layout_constraintRight_toRightOf="parent"
                                android:background="@drawable/round_category_fill"
                                app:layout_constraintDimensionRatio="1:1"
                                android:textColor="@color/colorLemon"
                                android:textSize="10sp"
                                android:text="디저트"
                                android:textStyle="bold" />

                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1">

                            <Button
                                android:id="@+id/modify_btn_category6"
                                android:layout_width="0dp"
                                android:layout_height="0dp"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintLeft_toLeftOf="parent"
                                app:layout_constraintRight_toRightOf="parent"
                                android:background="@drawable/round_category_fill"
                                app:layout_constraintDimensionRatio="1:1"
                                android:textColor="@color/colorLemon"
                                android:textSize="10sp"
                                android:text="기타"
                                android:textStyle="bold" />

                        </androidx.constraintlayout.widget.ConstraintLayout>

                    </LinearLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>


            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/modify_cl_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/modify_cl_category">

                <com.makers.lemoncook.src.VerticalTextView
                    android:id="@+id/modify_vt_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginTop="29dp"
                    android:layout_marginLeft="24dp"
                    android:text="@string/newRecipeTitle"
                    android:textColor="@color/colorMainGray"
                    android:textSize="12sp"/>

                <EditText
                    android:id="@+id/modify_et_little_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="53dp"
                    android:textSize="22sp"
                    android:textColor="@color/colorLoginBlack"
                    android:hint="@string/newRecipeLittleTitleHint"
                    android:textColorHint="@color/colorLoginGray"
                    android:layout_marginTop="21dp"
                    android:inputType="text"
                    android:maxLength="20"/>

                <EditText
                    android:id="@+id/modify_et_food_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/modify_et_little_title"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="53dp"
                    android:textSize="30sp"
                    android:textColor="@color/colorLoginBlack"
                    android:textColorHint="@color/colorLoginGray"
                    android:textStyle="bold"
                    android:hint="@string/newRecipeFoodNameHint"
                    android:inputType="text"
                    android:maxLength="10"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/modify_cl_hashtag"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/modify_cl_title">

                <com.makers.lemoncook.src.VerticalTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginLeft="24dp"
                    android:layout_marginTop="11dp"
                    android:text="@string/newRecipeHashTag"
                    android:textColor="@color/colorMainGray"
                    android:textSize="12sp"/>

                <EditText
                    android:id="@+id/modify_et_hash_tag"
                    android:layout_width="match_parent"
                    android:layout_height="34dp"
                    android:background="@drawable/round_hashtag_edittext"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="14dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginRight="88dp"
                    android:paddingLeft="9dp"
                    android:hint="@string/newRecipeHashTagHint"
                    android:textColorHint="@color/colorLoginGray"
                    android:textSize="12sp"
                    android:textColor="@color/colorLoginBlack"
                    android:maxLength="10"
                    android:inputType="text"/>

                <Button
                    android:id="@+id/modify_btn_add_hash_tag"
                    android:layout_width="61dp"
                    android:layout_height="34dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_marginTop="14dp"
                    android:layout_marginRight="22dp"
                    android:background="@drawable/radius_2dp_lemon"
                    android:textColor="@color/colorWhite"
                    android:textSize="12sp"
                    android:text="추가"/>

                <com.nex3z.flowlayout.FlowLayout
                    android:id="@+id/modify_flowLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/modify_et_hash_tag"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="13dp"
                    app:flChildSpacing="7dp"
                    app:flRowSpacing="5dp"/>


            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/modify_cl_main_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/modify_cl_hashtag">

                <com.makers.lemoncook.src.VerticalTextView
                    android:id="@+id/modify_vt_main_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginTop="24dp"
                    android:layout_marginLeft="24dp"
                    android:text="@string/newRecipeMainImage"
                    android:textColor="@color/colorMainGray"
                    android:textSize="12sp"/>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="286dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginTop="13dp"
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="24dp"
                    android:background="@color/colorLemon">

                    <ImageView
                        android:id="@+id/modify_iv_main_img"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:visibility="gone"/>

                    <ImageView
                        android:id="@+id/modify_iv_plus_main_image"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_plus_circle_y"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"/>

                    <TextView
                        android:id="@+id/modify_tv_plus_main_image"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorWhite"
                        android:textSize="11sp"
                        android:text="@string/newRecipeMainImageHint"
                        app:layout_constraintTop_toBottomOf="@+id/modify_iv_plus_main_image"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        android:layout_marginTop="8dp"/>


                </androidx.constraintlayout.widget.ConstraintLayout>


            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/modify_cl_recipe_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/modify_cl_main_image"
                android:layout_marginRight="24dp">

                <com.makers.lemoncook.src.VerticalTextView
                    android:id="@+id/modify_vt_recipe_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginTop="27dp"
                    android:layout_marginLeft="24dp"
                    android:text="@string/newRecipeRecipeImage"
                    android:textColor="@color/colorMainGray"
                    android:textSize="12sp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:orientation="horizontal"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="20dp">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/modify_cl_plus_recipe_image"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:background="@color/colorImageGray">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_plus_gray"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"/>

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/modify_rv_recipe_image"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/modify_cl_ingredient"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/modify_cl_recipe_image">

                <com.makers.lemoncook.src.VerticalTextView
                    android:id="@+id/modify_vt_ingredient"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginTop="27dp"
                    android:layout_marginLeft="24dp"
                    android:text="@string/newRecipeIngredient"
                    android:textColor="@color/colorMainGray"
                    android:textSize="12sp"/>

                <Button
                    android:id="@+id/modify_btn_get_material"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:background="@drawable/round_fill_lemon"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="24dp"
                    android:layout_marginBottom="48dp"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/colorWhite"
                    android:textSize="17sp"
                    android:text="추천재료 가져오기"/>

                <com.nex3z.flowlayout.FlowLayout
                    android:id="@+id/modify_flowLayout_material"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/modify_btn_get_material"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="13dp"
                    app:flChildSpacing="7dp"
                    app:flRowSpacing="5dp"/>

                <LinearLayout
                    android:id="@+id/modify_ll_dynamic_area"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/modify_flowLayout_material"
                    android:orientation="vertical"
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="24dp"
                    android:layout_marginTop="10dp"/>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/modify_cl_dynamic_plus_btn"
                    android:layout_width="match_parent"
                    android:layout_height="28dp"
                    app:layout_constraintTop_toBottomOf="@+id/modify_ll_dynamic_area"
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="59dp"
                    android:layout_marginTop="4dp"
                    android:background="@drawable/radius_4dp_gray">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_plus_yellow"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"/>

                </androidx.constraintlayout.widget.ConstraintLayout>


            </androidx.constraintlayout.widget.ConstraintLayout>

            <Button
                android:id="@+id/modify_btn_start"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:background="@drawable/round_fill_lemon"
                app:layout_constraintTop_toBottomOf="@+id/modify_cl_ingredient"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="24dp"
                android:layout_marginBottom="48dp"
                android:layout_marginTop="30dp"
                android:textColor="@color/colorWhite"
                android:textSize="17sp"
                android:text="@string/newRecipeStart"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

</LinearLayout>