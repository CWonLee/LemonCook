<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".src.recipe.fragments.MainRecipeFragment"
    android:background="@color/colorWhite">

    <ImageView
        android:id="@+id/main_recipe_fm_iv_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_lemon"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="7dp"
            android:layout_marginLeft="12dp" />

        <TextView
            android:id="@+id/main_recipe_fm_tv_hash_tag"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginBottom="23dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/round_hashtag_background"
            android:textColor="@color/colorWhite"
            android:textSize="14sp"
            android:padding="10dp"/>

        <TextView
            android:id="@+id/main_recipe_fm_tv_food_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@+id/main_recipe_fm_tv_hash_tag"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:gravity="start"
            android:textSize="40sp"
            android:textColor="@color/colorWhite"
            android:textStyle="bold"
            android:paddingLeft="24dp"
            android:paddingRight="24dp"
            android:layout_marginBottom="6dp"/>

        <TextView
            android:id="@+id/main_recipe_fm_tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@+id/main_recipe_fm_tv_food_name"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:gravity="start"
            android:textSize="30sp"
            android:textColor="@color/colorWhite"
            android:textStyle="bold"
            android:paddingLeft="24dp"
            android:paddingRight="24dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>