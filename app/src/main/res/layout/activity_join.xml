<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/join_cl"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    tools:context=".src.join.JoinActivity">

    <TextView
        android:id="@+id/join_tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="@string/loginWelcome"
        android:textColor="@color/colorLoginBlack"
        android:textSize="40sp"
        android:layout_marginTop="97dp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/join_tv_email_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/join_tv_title"
        android:layout_marginLeft="34dp"
        android:layout_marginTop="83dp"
        android:textColor="@color/colorLoginGray"
        android:textSize="12sp"
        android:text="@string/loginEmail"/>

    <EditText
        android:id="@+id/join_et_email"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        app:layout_constraintTop_toBottomOf="@+id/join_tv_email_text"
        android:layout_marginLeft="34dp"
        android:layout_marginRight="34dp"
        android:layout_marginTop="5dp"
        android:hint="@string/loginEmailHint"
        android:textColorHint="@color/colorLoginGray"
        android:textSize="16sp"
        android:textColor="@color/colorLoginEtBlack"
        android:background="@android:color/transparent"
        android:inputType="textEmailAddress"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintTop_toBottomOf="@id/join_et_email"
        android:background="@color/colorLoginGray"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"/>

    <TextView
        android:id="@+id/join_tv_name_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/join_et_email"
        android:layout_marginLeft="34dp"
        android:layout_marginTop="32dp"
        android:textColor="@color/colorLoginGray"
        android:textSize="12sp"
        android:text="@string/joinNickName"/>

    <EditText
        android:id="@+id/join_et_nickname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/join_tv_name_text"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="34dp"
        android:layout_marginRight="105dp"
        android:hint="@string/joinNickNameHint"
        android:textColorHint="@color/colorLoginGray"
        android:textSize="16sp"
        android:textColor="@color/colorLoginEtBlack"
        android:inputType="text"
        android:background="@android:color/transparent"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintTop_toBottomOf="@id/join_et_nickname"
        android:background="@color/colorLoginGray"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"></View>
    
    <Button
        android:id="@+id/join_btn_check_dup"
        android:layout_width="70dp"
        android:layout_height="30dp"
        app:layout_constraintTop_toBottomOf="@+id/join_et_email"
        android:background="@drawable/round_fill_lemon"
        android:text="@string/joinCheckDup"
        android:textColor="@color/colorWhite"
        android:textSize="14sp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="29dp"
        android:layout_marginTop="39dp"></Button>

    <TextView
        android:id="@+id/join_tv_pw_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/join_et_nickname"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="34dp"
        android:layout_marginTop="32dp"
        android:textColor="@color/colorLoginGray"
        android:textSize="12sp"
        android:text="@string/joinPassWord"></TextView>

    <EditText
        android:id="@+id/join_et_password"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        app:layout_constraintTop_toBottomOf="@+id/join_tv_pw_text"
        android:layout_marginLeft="34dp"
        android:layout_marginRight="34dp"
        android:layout_marginTop="5dp"
        android:hint="@string/loginPasswordHint"
        android:textColorHint="@color/colorLoginGray"
        android:textSize="16sp"
        android:textColor="@color/colorLoginEtBlack"
        android:background="@android:color/transparent"
        android:inputType="textPassword"></EditText>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintTop_toBottomOf="@id/join_et_password"
        android:background="@color/colorLoginGray"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"></View>

    <TextView
        android:id="@+id/join_tv_phone_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/join_et_password"
        android:layout_marginLeft="34dp"
        android:layout_marginTop="31dp"
        android:textColor="@color/colorLoginGray"
        android:textSize="12sp"
        android:text="@string/joinPhoneCert"></TextView>

    <EditText
        android:id="@+id/join_et_phone_cert"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/join_tv_phone_text"
        android:layout_marginLeft="34dp"
        android:layout_marginRight="105dp"
        android:layout_marginTop="9dp"
        android:hint="@string/joinPhoneCert"
        android:textColorHint="@color/colorLoginGray"
        android:textSize="16sp"
        android:textColor="@color/colorLoginEtBlack"
        android:background="@android:color/transparent"
        android:inputType="phone"></EditText>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintTop_toBottomOf="@id/join_et_phone_cert"
        android:background="@color/colorLoginGray"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"></View>

    <Button
        android:id="@+id/join_btn_phone_cert"
        android:layout_width="70dp"
        android:layout_height="30dp"
        android:background="@drawable/round_fill_lemon"
        android:text="@string/joinCert"
        android:textColor="@color/colorWhite"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@+id/join_et_password"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="29dp"
        android:layout_marginTop="45dp"></Button>
    
    <Button
        android:id="@+id/join_btn_complete"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="40dp"
        android:background="@drawable/round_fill_lemon"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:textColor="@color/colorWhite"
        android:textSize="18sp"
        android:text="@string/joinComplete"></Button>


</androidx.constraintlayout.widget.ConstraintLayout>